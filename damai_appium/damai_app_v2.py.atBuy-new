    def print_page_source(self, max_lines=30):
        """æ‰“å°é¡µé¢æºç ï¼ˆç”¨äºè°ƒè¯•ï¼‰- å¸¦è¶…æ—¶ä¿æŠ¤"""
        try:
            # ğŸ”§ æ·»åŠ è¶…æ—¶ä¿æŠ¤ï¼Œé¿å…å¡æ­»
            import signal
            def timeout_handler(signum, frame):
                raise TimeoutException("è·å–é¡µé¢æºç è¶…æ—¶")
            
            # è®¾ç½®3ç§’è¶…æ—¶ï¼ˆä»…Linux/Macæœ‰æ•ˆï¼ŒWindowsä¼šè·³è¿‡ï¼‰
            try:
                signal.signal(signal.SIGALRM, timeout_handler)
                signal.alarm(3)
            except:
                pass
            
            source = self.driver.page_source
            
            # å–æ¶ˆè¶…æ—¶
            try:
                signal.alarm(0)
            except:
                pass
            
            lines = source.split('\n')[:max_lines]
            line_count = len(source.split('\n'))
            print("\n  ğŸ“„ é¡µé¢æºç ç‰‡æ®µï¼š")
            for line in lines:
                print(f"  {line}")
            print(f"  ... (å…±{line_count}è¡Œ)\n")
        except TimeoutException:
            print("  âš  è·å–é¡µé¢æºç è¶…æ—¶ï¼Œè·³è¿‡")
        except Exception as e:
            print(f"  âš  æ— æ³•è·å–é¡µé¢æºç : {e}")

